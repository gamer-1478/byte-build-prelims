<div class="pokemon-container-main">
    <form class="signup-form" action="/pokemon/add" method="post">
        <h1>Register A New Pokemon!</h1>
        <div class="field">
            <label for="name">Name</label>
            <input type="text" required="true" name="name" id="name">
        </div>

        <div class="field">
            <label for="type">Type</label>
            <input type="text" required="true" name="type" id="type">
        </div>

        <div class="field">
            <label for="hp">Hitpoints</label>
            <input type="number" required="true" name="hp" id="hp" min="40" max="200">
        </div>

        <div class="field">
            <label for="weight">Weight (in kg)</label>
            <input type="number" required="true" name="weight" id="weight">
        </div>

        <div class="field">
            <label for="image">Image Link</label>
            <input type="text" required="true" name="image" id="image">
        </div>

        <div class="field">
            <label for="attacks">Attacks</label>
            <textarea type="text" required="true" name="attacks" id="attacks"></textarea>
        </div>

        <button class="signup-button" type="submit">Register Pokemon</button>
    </form>

    <div class="ur-pokes">
        <h1>Your Pokemons</h1>

        <% if(pokemons.length > 0){%>
        <% pokemons.forEach(productlist=>{%>
        <div class="productlist">
            <%productlist.forEach(product=>{%>
            <div class="list-item">
                <div class="item-image">
                    <img height="200px" width='200px' src="<%=product.image%>">
                </div>
                <div class="item-details">
                    <h1 class="item-title"><%= product.name %> </h1>
                    <div class="same-line">
                        <p><strong>Type:</strong> <%=product.type %> </p>
                        <p><strong>HP:</strong> <%=product.hp%></p>
                        <p><strong>Weight:</strong> <%=product.weight %> </p>
                        <p><strong>Attacks:</strong> <%-product.attacks %> </p>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        <% }) %>
        <%} else { %>
        <h2>No Pokemons</h2>
        <% } %>
    </div>
</div>

