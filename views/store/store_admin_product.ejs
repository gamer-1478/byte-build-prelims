<div class="store">
    <form class="signup-form" action="/store/admin/edit/<%=product.productId%> " method="post">
        <h2>Edit Product</h2>
        <div class="field">
            <label for="Name">Name</label>
            <input type="text" name="name" id="name" required="true" placeholder="Name" value="<%= product.name %>">
        </div>
        <div class="field">
            <label for="quantity">Quantity</label>
            <input type="number" name="quantity" id="quantity" required="true" placeholder="Quantity"
                value="<%= product.quantity %>">
        </div>
        <div class="field">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" required="true" placeholder="Price"
                value="<%= product.price %>">
        </div>
        <div class="field">
            <label for="image">Image</label>
            <img src="<%= product.image %>" width="100px" height="100px">
            <input type="text" name="image" id="image" required="true" placeholder="Image" value="<%= product.image %>">
        </div>

        <div class="field">
            <label for="type" value="<%= product.type %>">Type</label>
            <select id="type" name="type">
                <option value="potions">Potions</option>
                <option value="pokeballs">Pokeballs</option>
                <option value="lootbox">Lootbox</option>
                <option value="other">Other</option>
            </select>
        </div>

        <div class="field">
            <label for="description">Description</label>
            <textarea name="description" id="description" cols="30" rows="10"><%- product.description %></textarea>
        </div>
        <button type="submit" class="signup-button">Save Item</button>
    </form>
    <br><br>
    <form action="/store/admin/delete/<%=product.productId%>" method="post">
        <button type="submit" class="delete-button">DELETE ITEM</button>
    </form>
</div>

